<?xml version='1.0' encoding='utf-8'?>
<widget id="com.infomovil.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>InfoMóvil</name>
    <description>
        Aplicación web móvil para información dinámica de países, clima, videojuegos y fútbol.
    </description>
    <author email="grupo8@taller2.cl" href="https://github.com/grupo8">
        Grupo 8 - Taller 2 Web Móvil
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <!-- Permitir conexiones a servidores locales -->
    <access origin="http://192.168.1.82:3001" />
    <access origin="http://192.168.1.82:3002" />
    <access origin="http://192.168.1.82:8000" />
    <access origin="http://localhost:*" />
    <access origin="http://127.0.0.1:*" />
    
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="22" />
    <preference name="android-targetSdkVersion" value="35" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="AndroidInsecureFileModeEnabled" value="true" />
</widget>

